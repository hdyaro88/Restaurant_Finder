<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:weightSum="6">
        <ImageView
            android:id="@+id/img_restro"
            android:layout_width="0dp"
            android:padding="6dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="110dp"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_weight="3.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtRestroName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name_of_the_restro"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtRestroPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="rs_299"
                android:padding="8dp"
                android:layout_below="@id/txtRestroName"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#357a38"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
<!--            <Button-->
<!--                android:id="@+id/btnaddtofav"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:background="@drawable/ic_not_fav"/>-->

            <TextView
                android:id="@+id/txtRestroRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_rating"
                android:padding="4dp"
                android:text="4.3"
                android:textAlignment="center"
                android:textColor="#ffca28" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>