<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:layout_marginBottom="20dp"
    android:background="@drawable/customborder"
    android:weightSum="6">
        <TextView
            android:layout_weight="1.5"
            android:id="@+id/txt_food_item_id"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="id"
            android:textAlignment="center"
            android:paddingTop="20dp"
            />
    <RelativeLayout
        android:layout_weight="3"
        android:layout_toRightOf="@+id/ll_food_id"
        android:id="@+id/ll_food_detail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_food_item_id"
            android:id="@+id/txt_food_item_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Item Name"/>
        <TextView
            android:layout_below="@id/txt_food_item_name"
            android:layout_toRightOf="@id/txt_food_item_id"
            android:id="@+id/txt_food_item_price"
            android:layout_width="200dp"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Item Price"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1.5"
        android:layout_toRightOf="@+id/ll_food_detail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <Button
        android:layout_toRightOf="@id/txt_food_item_name"
        android:id="@+id/btn_add_to_cart"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:layout_marginVertical="10dp"
        android:background="#6200EE"
        android:textColor="#ffff"
        android:text="Add"/>
    </LinearLayout>
</LinearLayout>